<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Bmi</th>
      <th>Highblood</th>
      <th>Lowblood</th>
      <th>Diary</th>
      <th>Picture</th>
      <!-- <th>Pictureimage</th> -->
      <th>Targetbmi</th>
      <th>Targetweight</th>
      <th>Compareweight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.day %></td>
        <td><%= record.height %></td>
        <td><%= record.weight %></td>
        <td><%= record.bmi %></td>
        <td><%= record.highblood %></td>
        <td><%= record.lowblood %></td>
        <td><%= record.diary %></td>
        <!-- <td><%= record.picture %></td> -->
        <td><%= image_tag(record.picture_url, :size => "100x70") if record.picture.present? %></td>
        <td><%= record.targetbmi %></td>
        <td><%= record.targetweight %></td>
        <td><%= record.compareweight %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

